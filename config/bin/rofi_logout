#!/usr/bin/env bash

question=$(echo "lock|suspend|poweroff|logout|reboot" | rofi -sep "|" \
    -dmenu -i -p 'System' -lines 2 -width 10 -color-enabled)

case $question in
    *lock)
        lock
        ;;
    *logout)
        swaymsg 'exit'
        ;;
    *reboot)
        reboot
        ;;
    *suspend)
        swaymsg "output eDP-1 enable" && systemctl suspend
        ;;
    *poweroff)
        poweroff
        ;;
    *)
        exit 0  # do nothing on wrong response
        ;;
esac

