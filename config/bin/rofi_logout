#!/usr/bin/env bash

question=$(echo "lock|hibernate|logout|reboot" | rofi -sep "|" \
    -dmenu -i -p 'System' -lines 2 -width 10 -color-enabled)

case $question in
    *lock)
        lock
        ;;
    *logout)
        swaymsg 'exit'
        ;;
    *reboot)
        reboot
        ;;
    *hibernate)
        swaymsg "output eDP-1 enable" && systemctl hibernate
        ;;
    *)
        exit 0  # do nothing on wrong response
        ;;
esac

