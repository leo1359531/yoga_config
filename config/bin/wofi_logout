#!/usr/bin/bash
menu=" Shutdown\n Restart\n⏾ Susupend\n Cancel"

selected=$(echo -e $menu | wofi -W 21% --dmenu --line 5 --cache-file /dev/null -p "Wofi Logout" | awk '{print tolower ($2)}')

case $selected in
   shutdown)
      exec poweroff;;
   restart)
      exec reboot;;
   suspend)
      exec swaymsg "output eDP-1 enable" && systemctl suspend;;
   cancel)
      exec killall wofi;;
esac
